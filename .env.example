# MagicVial Environment Configuration
# Copy this file to .env and fill in your specific values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=magicvial
DB_USER=postgres
DB_PASSWORD=password

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WEBSOCKET=wss://api.devnet.solana.com

# Token Configuration
VIAL_TOKEN_MINT=

# Contract Addresses
MATERIAL_PROGRAM_ID=
RECIPE_PROGRAM_ID=
CRAFTING_PROGRAM_ID=
GUILD_PROGRAM_ID=

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Third Party Services
REDIS_URL=redis://localhost:6379

# Admin Wallet
ADMIN_WALLET_PUBKEY=
ADMIN_WALLET_PRIVATE_KEY=

# Feature Flags
ENABLE_CRAFTING=true
ENABLE_GUILDS=false
ENABLE_SEASONAL_EVENTS=false

# Logging
LOG_LEVEL=debug

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Application
APP_NAME=MagicVial
APP_URL=http://localhost:3000
APP_PORT=3000
API_PORT=4000

# Database
DB_TYPE=postgres
DB_SSL=false

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=magicvial:

# API Keys
CHAINLINK_VRF_KEY=
INFURA_PROJECT_ID=
ARWEAVE_KEY=

# File Storage
STORAGE_TYPE=local
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@magicvial.co

# Social Media Integration
TWITTER_API_KEY=
TWITTER_API_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=

# Frontend Configuration
VITE_API_URL=/api
VITE_WEBSOCKET_URL=ws://localhost:4001
VITE_SOLANA_CLUSTER=devnet 